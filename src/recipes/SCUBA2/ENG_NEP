# Standard engineering introduction
_SCUBA2_HELLO_ENG_

# Deal with recipe parameters
_ENG_STEER_

# Calculate noise and effective NEP for all heater/bias settings
_CALCULATE_NOISE_GROUP_

# Create hypercubes of the NEP for each subarray
_CREATE_NEP_CUBE_

# Create the NEP images for each subarray
# First, the effective NEP images
_CALCULATE_NEP_GROUP_ NEPTYPE=EFF
_CREATE_NEP_IMAGE_ NEPTYPE=EFF

# Then the RMS NEP images
_CALCULATE_NEP_GROUP_ NEPTYPE=RMS
_CREATE_NEP_IMAGE_ NEPTYPE=RMS

# Calculate the mapping speed
_CALCULATE_MAPPING_SPEED_GROUP_ NBOLST=300 NBOLEN=1000 STEP=100

# Delete any temporary files, keeping only the NEP images
_DELETE_TEMP_FILES_ KEEP=_effnep,_rmsnep,_nep ALSOGRP=1 VERBOSE=0
