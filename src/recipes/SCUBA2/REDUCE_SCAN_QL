# Standard introduction
_SCUBA2_HELLO_

# This is the quick-look pipeline
_QUICK_LOOK_STEER_

# Process any fast-ramp flatfield data
_PROCESS_FASTFLAT_

# Create image to analyze - use the iterative map-maker for best
# results. Sky removal and extinction correction are handled here too.
_QLMAKEMAP_FRAME_

# Derive FCFs if this is a calibrator - the image is trimmed and has a
# background subtracted before calculating FCFs. However, the original
# file created by _QLMAKEMAP_FRAME_ is stored again on completion.
_CALCULATE_FCFS_

# Calibrate data
_CALIBRATE_DATA_

# Display the frame mosaic
_DISPLAY_FRAME_

# Add the new frame mosaic into the group. Use nearest-neighbour
# resampling to obtain a robust estimate of the noise.
_MAKE_MOSAIC_GROUP_ METHOD=NEAREST COADD_MODE=RUNNING

# Determine the mean sky noise from the variance in the image
_CALC_IMAGE_NOISE_ METHOD=VARIANCE GROUP=1

# Display the group mosaic
_DISPLAY_GROUP_

# Delete any temporary files, keeping only the current files and
# calibrated data. Note that the last file created by the frame will
# not be deleted because it is never replaced by anything so will
# never get pushed onto the intermediates array
_DELETE_TEMP_FILES_ KEEP=_cal
