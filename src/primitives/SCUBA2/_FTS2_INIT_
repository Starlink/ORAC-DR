=cut

orac_say "Initializing...\n";

my $ext = "_fts";

# my $zpd = "/home/oba/UoL/FTS2/cal/ZPD.sdf";
my $zpd = "/home/oba/UoL/FTS2/cal/ZPD_S8C.sdf";

my @outFiles;
for my $i (1..$Frm->nfiles) {
  my ($in, $out) = $Frm->inout($ext, $i);
  my $args = "in=$in out=$out zpd=$zpd";

  orac_say "Processing " . $out . "...: ";
  my $status = $Mon{smurf_mon}->obeyw("fts2init","$args");
  if($status == ORAC__OK) {
    orac_say "DONE\n";
  } else {
    orac_say "FAILED\n";
  }
  push(@outFiles, $out);
}
$Frm->files(@outFiles);
