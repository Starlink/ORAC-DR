=cut

orac_say "\nCompensating for Image Distortion and Field Rotation...\n";

my $ext = "_opt";

my @outFiles;
for my $i (1..$Frm->nfiles) {
  my ($in, $out) = $Frm->inout($ext, $i);
  my $args = "in=$in out=$out";

  orac_say "Processing " . $out . "...: ";
  my $status = $Mon{smurf_mon}->obeyw("fts2opcorr","$args");
  if($status == ORAC__OK) {
    orac_say "DONE";
  } else {
    orac_termerr('FAILED');
  }
  push(@outFiles, $out);
}
$Frm->files(@outFiles);
