if ($Frm->hdr("SIMULATE")) {
  orac_warn(" *** This observation is simulated data! ***\n");
  foreach my $key ($Frm->hdrkeys) {
    next unless $key =~ /^SIM_/;
    my $val = $Frm->hdr($key);
    unless (defined $val) {
      orac_warn("Simulation header $key contains mixed values or is undefined.\n");
    }
    elsif ($val) {
      orac_warn("Simulation header $key is set.\n");
    }
  }
}

my $dome_open = $Frm->uhdr('ORAC_DOME_OPEN');
unless (defined $dome_open) {
  orac_warn(" The headers do not establish the dome status.\n");
}
elsif (not $dome_open) {
  orac_warn(" *** The headers indicate that the dome is closed! ***\n");
}
